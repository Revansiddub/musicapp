<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="availableSlot"
            type="com.gsatechworld.musicapp.modules.select_time_slot.pojo.AvailableTimesSlotResponse.AvailablesSlotes"/>
    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutTimeSlot"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_140dp"
        android:padding="@dimen/size_1dp"
        android:background="@drawable/edit_text_rounded_corner"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/card_start"
            android:layout_width="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="@dimen/size_50dp"
                    android:layout_height="@dimen/size_50dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:src="@drawable/ic_baseline_time_24"
                    android:layout_marginLeft="@dimen/size_60dp"
                    />

                <TextView
                    android:id="@+id/text_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Star Time : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_40dp"
                    android:fontFamily="georgia"
                    android:layout_below="@id/image1"
                    android:layout_marginTop="@dimen/size_8dp"/>

                <TextView
                    android:id="@+id/start_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/size_2dp"
                    android:textSize="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_45dp"
                    android:fontFamily="georgia"
                    android:layout_below="@id/text_start"
                    android:singleLine="true"/>



                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="@dimen/size_50dp"
                        android:layout_height="@dimen/size_50dp"
                        android:src="@drawable/ic_baseline_time_24"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/size_60dp"
                        />


                    <TextView
                        android:id="@+id/text_end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/size_20dp"
                        android:text="End Time : "
                        android:layout_below="@id/image2"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="@dimen/size_8dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_alignParentRight="true"
                        />

                    <TextView
                        android:id="@+id/endtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_20dp"
                        android:layout_marginRight="50dp"
                        android:layout_below="@id/text_end"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/size_2dp"
                        />





            </RelativeLayout>

        </androidx.cardview.widget.CardView>














