<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.student_home.EntrollmentDetailsActivity">

        <TextView
            android:id="@+id/text_entrollment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amarante"
            android:text="Guitar"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/size_30dp"
            android:layout_marginTop="@dimen/size_15sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_150dp"
            app:layout_constraintTop_toBottomOf="@id/text_entrollment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_upcoming_class"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/artifika"
                    android:text="Upcoming Class"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/size_15sp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date :"
                    android:layout_below="@id/text_upcoming_class"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:padding="@dimen/size_10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/text_date"
                    android:text="17-06-2020"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/size_15sp"
                    android:layout_below="@id/text_upcoming_class"
                    android:padding="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginLeft="@dimen/size_10dp"/>

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time :"
                    android:layout_below="@id/text_date"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:padding="@dimen/size_10dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7 PM"
                    android:layout_below="@id/date"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:padding="@dimen/size_10dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_toRightOf="@id/text_time"
                    android:textStyle="bold"/>

            </RelativeLayout>




        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>
