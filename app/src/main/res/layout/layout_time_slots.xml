<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="timeSlot"
            type="com.gsatechworld.musicapp.modules.home.trainer_home.pojo.Available_slots"/>
    </data>

    <RelativeLayout
        android:id="@+id/layoutTimeSlot"
        android:layout_width="@dimen/size_170dp"
        android:layout_height="@dimen/size_40dp"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/edit_text_rounded_corner"
        >

        <TextView
            android:id="@+id/textTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{timeSlot.start_time + ` - ` + timeSlot.end_time}"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/size_15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/size_1dp"
            android:layout_centerVertical="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="parent" />

       <RelativeLayout
           android:id="@+id/relative_close"
           android:layout_width="@dimen/size_30dp"
           android:layout_height="match_parent"
           android:layout_alignParentRight="true"
           android:background="@color/colorPrimaryDark">


           <ImageView
               android:id="@+id/image_close"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_close_black_24dp"
               android:layout_centerInParent="true"
               android:layout_margin="@dimen/size_2dp"
               android:layout_alignParentEnd="true"
               />

       </RelativeLayout>




    </RelativeLayout>

</layout>