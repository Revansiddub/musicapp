<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F8FF"
        android:fitsSystemWindows="true"
        tools:context=".modules.student_home.StudentHomeFragment">


        <TextView
            android:id="@+id/text_entrollment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="georgia"
            android:text="Entrollments"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_entrollments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_15dp"
            app:layout_constraintTop_toBottomOf="@id/text_entrollment"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/text_addentrollment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:drawableStart="@drawable/icon_add"
            android:drawablePadding="@dimen/size_5dp"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="georgia"
            android:text="@string/add_new_entrollmet"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/size_18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_entrollments"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>