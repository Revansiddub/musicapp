<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E6E6FA"
        android:gravity="center_vertical"
        tools:context=".modules.home.trainer_home.AddAttendanceActivity">




        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_15dp"
            android:layout_marginTop="@dimen/size_20dp"
            android:layout_marginRight="@dimen/size_15dp"
            app:cardCornerRadius="@dimen/size_5dp">


            <RelativeLayout
                android:id="@+id/relative_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size_10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_icon"
                    android:layout_width="@dimen/size_90dp"
                    android:layout_height="@dimen/size_90dp"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:layout_below="@id/image_icon"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:layout_below="@id/image_icon"
                    android:layout_toRightOf="@id/textview_name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="@string/age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textview_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/age"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textview_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/age"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal" />


                <TextView
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobile"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="Start Time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textview_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mobile"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/text_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timing"
                    android:text="End Time"
                    android:textSize="@dimen/size_15dp"
                    android:textColor="@color/black"
                    android:padding="@dimen/size_10dp"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:fontFamily="georgia"
                    />

                <TextView
                    android:id="@+id/endTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timing"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:padding="@dimen/size_10dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"

                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutUserType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_endtime"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:layout_marginEnd="@dimen/size_20dp"
                    android:background="@drawable/button_rectangle_unselected"
                    android:backgroundTint="@color/md_grey_100"
                    android:padding="@dimen/size_2dp">

                    <TextView
                        android:id="@+id/text_present"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_rounded_corner"
                        android:backgroundTint="@color/colorAccent"
                        android:drawableTint="@color/white"
                        android:padding="@dimen/size_10dp"
                        android:text="Present"
                        android:textColor="@color/white"
                        android:textSize="@dimen/size_17sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/text_absent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UnusedAttribute"/>

                    <TextView
                        android:id="@+id/text_absent"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:padding="@dimen/size_10dp"
                        android:text="Absent"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/size_17sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/text_present"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="UnusedAttribute" />


                </androidx.constraintlayout.widget.ConstraintLayout>



                <Button
                    android:id="@+id/button_submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layoutUserType"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginTop="@dimen/size_30dp"
                    android:layout_marginRight="@dimen/size_20dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center_horizontal"
                    android:padding="@dimen/size_10dp"
                    android:text="@string/submit"
                    android:textColor="@color/white" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>





    </RelativeLayout>
</layout>
