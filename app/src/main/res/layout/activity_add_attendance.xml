<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFAF0"
        tools:context=".modules.home.trainer_home.AddAttendanceActivity">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_250dp"
            android:background="@color/white"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_attendance"
                android:layout_marginTop="@dimen/size_15dp"
                android:textSize="@dimen/size_20dp"
                android:fontFamily="georgia"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="@dimen/size_96dp"
                android:layout_height="@dimen/size_90dp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_music"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_250dp">


            <RelativeLayout
                android:id="@+id/relative_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:orientation="horizontal"
                android:background="@drawable/linear_layout_border"
                >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/textview_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp"
                android:layout_below="@id/relative_name"
                android:background="@drawable/linear_layout_border"
                >

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="@string/age"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textview_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp"
                android:layout_below="@id/relative_age"
                android:background="@drawable/linear_layout_border"
                >

                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />
                <TextView
                    android:id="@+id/textview_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_timing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp"
                android:layout_below="@id/relative_mobile"
                android:background="@drawable/linear_layout_border"
                >

                <TextView
                    android:id="@+id/timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="Timing"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    />
                <TextView
                    android:id="@+id/textview_timing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative_attendance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp"
                android:layout_below="@id/relative_timing"
                android:background="@drawable/linear_layout_border"
                >

                <TextView
                    android:id="@+id/attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15dp"
                    android:fontFamily="georgia"
                    android:padding="@dimen/size_10dp"
                    android:text="Attendance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="normal"
                    tools:ignore="MissingConstraints" />
                <CheckBox
                    android:id="@+id/checkbox_attented"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/attendance"
                    android:textColor="@color/black"
                    android:text="Attented"
                    android:padding="@dimen/size_10dp"/>
                <CheckBox
                    android:id="@+id/checkbox_not_attented"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/checkbox_attented"
                    android:textColor="@color/black"
                    android:text="@string/not_attented"
                    android:layout_alignParentRight="true"
                    android:padding="@dimen/size_10dp"/>


            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative_attendance"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_rounded_corner"
                android:layout_marginTop="@dimen/size_20dp"
                android:text="@string/submit"
                android:padding="@dimen/size_15dp"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"/>










        </RelativeLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>

















</layout>
