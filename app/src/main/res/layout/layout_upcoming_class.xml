<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="upcomingclass"
            type="com.gsatechworld.musicapp.modules.student_home.pojo.UpcomingResponse.Upcoming_class" />


    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/size_180dp"
        android:layout_height="@dimen/size_240dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/size_3dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="@dimen/size_3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{upcomingclass.date}"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/size_3dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/size_15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/text_starttime"
                    android:text="Start Time  :"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timer_image"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_15dp"/>

                <TextView
                    android:id="@+id/text_start_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/timer_image"
                    android:textSize="@dimen/size_15dp"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@id/text_starttime"
                    android:layout_marginTop="@dimen/size_15dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/text_endtime"
                    android:text="End Time    :"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_start_value"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/size_15dp"
                    android:layout_marginTop="@dimen/size_10dp"/>

                <TextView
                    android:id="@+id/text_end_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text_start_value"
                    android:textSize="@dimen/size_15dp"
                    android:layout_toRightOf="@id/text_endtime"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/button_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancel"
                    android:padding="@dimen/size_8dp"
                    android:textAlignment="center"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/white"
                    android:layout_alignParentBottom="true"
                    />

                <ImageView
                    android:id="@+id/timer_image"
                    android:layout_width="@dimen/size_60dp"
                    android:layout_height="@dimen/size_60dp"
                    android:layout_below="@id/text_date"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_timer"
                    android:layout_marginTop="@dimen/size_15dp"/>


            </RelativeLayout>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
